<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginBottom="20dp">

    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="235dp"
        android:contentDescription="@null"
        android:layout_marginBottom="16dp"
        android:scaleType="centerCrop"
        android:src="@drawable/sample_project_aimge"
        app:tint="?attr/colorOnBackground"
        android:tintMode="multiply"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginBottom="16dp"
        android:paddingStart="15dp"
        android:paddingEnd="15dp">

        <TextView
            android:id="@+id/author"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableStart="@drawable/outline_person_24"
            android:textColor="?attr/colorOnBackground"
            android:alpha=".7"
            android:drawablePadding="5dp"
            android:text="Ispolnitel"
            android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
            app:drawableTint="?attr/colorOnBackground" />

        <TextView
            android:id="@+id/rating"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:drawableEnd="@drawable/star"
            android:textColor="@color/yellow"
            android:drawablePadding="5dp"
            android:text="4.9 (122)"
            android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
            android:textAlignment="textEnd"
            app:drawableTint="@color/yellow" />

    </LinearLayout>

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="?attr/colorOnBackground"
        android:textSize="24sp"
        android:text="Native Android-приложение на Kotlin + Jetpack Compose"
        android:layout_marginBottom="16dp"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingStart="15dp"
        android:paddingEnd="15dp">
        <TextView
            android:id="@+id/price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="?attr/colorPrimary"
            android:layout_weight="1"
            android:text="от 24000₽"/>
        <ImageView
            android:id="@+id/more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_more_vert_24"
            app:tint="?attr/colorOnBackground"
            android:alpha=".7" />
    </LinearLayout>

</LinearLayout>